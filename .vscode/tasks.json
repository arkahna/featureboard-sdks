{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": ["$tsc-watch"],
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "label": "tsc: watch - tsconfig.json",
            "isBackground": true
        },
        {
            "type": "process",
            "command": "pnpx",
            "args": ["vitest", "run", "${relativeFile}"],
            "group": "test",
            "isTestCommand": true,
            "options": {
                "env": {
                    "NODE_ENV": "test"
                }
            },
            "problemMatcher": [],
            "label": "Run test file"
        },
        {
            "type": "process",
            "command": "pnpx",
            "args": ["vitest", "${relativeFile}"],
            "group": "test",
            "isTestCommand": true,
            "options": {
                "env": {
                    "NODE_ENV": "test"
                }
            },
            "problemMatcher": [],
            "label": "Watch test file"
        }
    ]
}
