{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "importHelpers": true,
        "esModuleInterop": true,
        "target": "es2018",
        "module": "esnext",
        "lib": ["es2018", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "strict": true,
        "paths": {
            "@featureboard/cli": ["apps/cli/src/index.ts"],
            "@featureboard/api-authentication": [
                "libs/api-authentication/src/index.ts"
            ],
            "@featureboard/code-generator": [
                "libs/code-generator/src/index.ts"
            ],
            "@featureboard/contracts": ["libs/contracts/src/index.ts"],
            "@featureboard/js-sdk": ["libs/js-sdk/src/index.ts"],
            "@featureboard/live-connection": [
                "libs/live-connection/src/server.ts"
            ],
            "@featureboard/node-sdk": ["libs/node-sdk/src/index.ts"],
            "@featureboard/nx-plugin": ["libs/nx-plugin/src/index.ts"],
            "@featureboard/react-sdk": ["libs/react-sdk/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
