{
    "name": "cli",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/cli/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "outputPath": "apps/cli/dist",
                "main": "apps/cli/src/main.ts",
                "tsConfig": "apps/cli/tsconfig.app.json",
                "assets": [
                    "./apps/cli/*.md",
                    "./apps/cli/package.json",
                    {
                        "input": "./libs/code-generator/src/lib",
                        "glob": "**/*.template",
                        "output": "./"
                    }
                ],
                "generatePackageJson": true,
                "additionalEntryPoints": ["apps/cli/src/index.ts"],
                "format": ["cjs"],
                "esbuildOptions": {
                    "sourcemap": true
                }
            }
        },
        "serve": {
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "cli:build",
                "args": [
                    "code-gen",
                    "--output-path",
                    "./apps/examples/dotnet-api"
                ]
            },
            "configurations": {
                "development": {
                    "buildTarget": "cli:build:development"
                },
                "production": {
                    "buildTarget": "cli:build:production"
                }
            }
        },
        "package": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "tsc --project  tsconfig.app.json --emitDeclarationOnly --declaration --outDir dist"
                ]
            },
            "defaultConfiguration": "production",
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "apps/cli/**/*.ts",
                    "apps/cli/package.json"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/cli/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    },
    "tags": []
}
