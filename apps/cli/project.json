{
    "name": "cli",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/cli/src",
    "projectType": "application",
    "targets": {
        "serve": {
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "cli:package",
                "args": [
                    "code-gen",
                    "--output-path",
                    "./apps/examples/dotnet-api"
                ]
            },
            "configurations": {
                "development": {
                    "buildTarget": "cli:package:development"
                },
                "production": {
                    "buildTarget": "cli:package:production"
                }
            }
        },
        "package": {
            "executor": "nx:run-commands",
            "options": {
                "outputPath": "{projectRoot}/dist",
                "outputFileName": "main.js",
                "commands": [
                    "tsup src/main.ts -d dist --sourcemap --format esm --legacy-output --external @featureboard/code-generator",
                    "tsup src/main.ts -d dist/legacycjs --sourcemap --format cjs --legacy-output --external @featureboard/code-generator",
                    "tsup src/main.ts -d dist --sourcemap --format esm,cjs --external @featureboard/code-generator",
                    "tsc --emitDeclarationOnly --declaration --outDir dist"
                ],
                "cwd": "apps/cli",
                "parallel": false
            },
            "dependsOn": ["^package"]
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "apps/cli/src/**/*.ts",
                    "apps/cli/package.json"
                ]
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "options": {
                "passWithNoTests": true,
                "reportsDirectory": "../../coverage/apps/cli"
            }
        }
    },
    "tags": []
}
