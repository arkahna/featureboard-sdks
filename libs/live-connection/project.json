{
    "name": "live-connection",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "libs/live-connection/src",
    "targets": {
        "lint": {
            "executor": "@nx/linter:eslint",
            "options": {
                "lintFilePatterns": [
                    "libs/live-connection/**/*.ts"
                ]
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "branchProtectionPrompt vitest --run --passWithNoTests",
                "cwd": "libs/live-connection"
            }
        },
        "package": {
            "executor": "@nx/esbuild:esbuild",
            "options": {
                "main": "libs/live-connection/src/server.ts",
                "additionalEntryPoints": [
                    "libs/live-connection/src/browser.ts"
                ],
                "tsConfig": "libs/live-connection/tsconfig.json",
                "outputPath": "libs/live-connection/dist",
                "skipTypeCheck": true,
                "format": [
                    "esm",
                    "cjs"
                ],
            }
        }
    }
}