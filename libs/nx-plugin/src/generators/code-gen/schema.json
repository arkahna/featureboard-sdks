{
    "$schema": "http://json-schema.org/schema",
    "$id": "CodeGen",
    "title": "",
    "type": "object",
    "properties": {
        "template": {
            "description": "The type of the generated code.",
            "alias": "t",
            "type": "string",
            "x-prompt": {
                "message": "Select the template type",
                "type": "list",
                "items": [
                    {
                        "value": "dotnet-api",
                        "label": "DotNet API"
                    },
                    {
                        "value": "typescript",
                        "label": "Typescript"
                    }
                ]
            }
        },

        "projectName": {
            "type": "string",
            "description": "The name of the project to add the generated code to.",
            "alias": "p",
            "$default": {
                "$source": "projectName"
            },
            "x-prompt": "What is the name of the project you want to add the generated code to?"
        },

        "featureBoardProductName": {
            "type": "string",
            "description": "The name of the FeatureBoard product you want to pull the types from.",
            "alias": "f"
        },

        "featureBoardApiKey": {
            "type": "string",
            "description": "The FeatureBoard API key."
        },

        "subFolder": {
            "type": "string",
            "description": "The Sub-folder of the project to add the generated code to.",
            "default": "./"
        }
    },
    "required": ["template", "projectName", "featureBoardProductName"]
}
