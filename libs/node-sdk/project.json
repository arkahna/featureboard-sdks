{
    "name": "node-sdk",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "libs/node-sdk/src",
    "targets": {
        "lint": {
            "executor": "@nx/linter:eslint",
            "options": {
                "lintFilePatterns": [
                    "libs/node-sdk/**/*.ts"
                ]
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "pnpm vitest --run --passWithNoTests",
                "cwd": "libs/node-sdk"
            }
        },
        "package": {
            "executor": "@nx/esbuild:esbuild",
            "options": {
                "main": "libs/node-sdk/src/index.ts",
                "tsConfig": "libs/node-sdk/tsconfig.json",
                "external": [
                    "node-fetch"
                ],
                "outputPath": "libs/node-sdk/dist",
                "skipTypeCheck": true,
                "format": [
                    "esm", "cjs"
                ],
            }
        }
    }
}