{
    "name": "contracts",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "libs/contracts/src",
    "targets": {
        "lint": {
            "executor": "@nx/eslint:lint",
            "options": {
                "lintFilePatterns": ["libs/contracts/**/*.ts"]
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "pnpm vitest --run --passWithNoTests",
                "cwd": "libs/contracts"
            }
        },
        "package": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "tsup src/index.ts -d dist --sourcemap --format esm --legacy-output --clean",
                    "tsup src/index.ts -d dist/legacycjs --sourcemap --format cjs --legacy-output",
                    "tsup src/index.ts -d dist --sourcemap --format esm,cjs",
                    "tsc --emitDeclarationOnly --declaration --outDir dist"
                ],
                "cwd": "libs/contracts",
                "parallel": false
            }
        }
    }
}
